{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "exclude": ["__tests__", "example", "dist"]
}