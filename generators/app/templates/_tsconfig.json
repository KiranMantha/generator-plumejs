{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],    
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "exclude": ["__tests__", "dist", "node_modules"]
}